<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.irfpero.mapamap.Menu">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="149dp"
        android:layout_height="145dp"
        android:background="#00ffffff"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/news"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="62dp"
        android:layout_marginBottom="53dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="145dp"
        android:layout_height="146dp"
        android:background="#00ffffff"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rulesbt"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="62dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="145dp"
        android:layout_height="134dp"
        android:background="#00ffffff"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/maps"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="235dp"
        android:layout_above="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/button2"
        android:background="#00ffffff"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-smallcaps"
        android:inputType="textPersonName"
        android:text=" Hi, Welcome To ZooTan      . I will guide you in visiting the zoo. REMEMBER TO ALWAYS COMPLY WITH ZOO REGULATIONS. Copyright by zootan 2017"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_help"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="380dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:adjustViewBounds="false"
        android:alpha="0.7"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@drawable/zotan" />

</RelativeLayout>
